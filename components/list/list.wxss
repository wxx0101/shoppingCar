/* components/list/list.wxss */
.list{
    height: 100%;
}
/* .list_item{
    margin-bottom: .625rem;
} */
.title{
    line-height: 2.5rem;
}
.spuListItem{
    width: 100%;
    height: 5rem;
    margin-bottom: .9375rem;
    display: flex;
    overflow: hidden;
    
}
.spuListItem >image{
    width: 5rem;
    height:5rem;
}
.spuListItem >.spuListItem_right{
    flex: 1;
    box-sizing: border-box;
    padding-left: .625rem;
}
.spuListItem >.spuListItem_right .spuName{
    font-size: .75rem;
    line-height: 1.875rem;

}
.spuListItem >.spuListItem_right .spuDesc{
    font-size:20rpx;
    color: #ccc;
    width: 100%;
    max-width: 6.25rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    
    
}
.spuListItem >.spuListItem_right .praiseNum{
    font-size: .875rem;
    font-weight: 800;
    line-height: 2.1875rem;
    display: flex;
    position: relative;
}

.spuListItem >.spuListItem_right .praiseNum .is_count{
 flex: 5;
 height: 100%;
  /* padding-left: 35%; */
  color: red;
  position: absolute;
  top: 0;
  right: 15%;
}

.pop{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background:rgba(255,255,255,.6);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    z-index: 12;
}
.pop .btn{
    width: 150rpx;
    height: 50rpx;
    border-radius: 500rpx;
    line-height: 50rpx;
    font-size: 31rpx;
    background: red;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
}